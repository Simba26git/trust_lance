{
  "name": "trustlens-platform",
  "version": "1.0.0",
  "description": "TrustLens - AI-Powered Content Verification Platform - Launch Ready",
  "main": "api/server.js",
  "scripts": {
    "setup": "npm install && cd frontend && npm install && cd ../api && npm install",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:api",
    "start:api": "cd api && node server.js",
    "start:frontend": "cd frontend && npm run preview",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy:vercel": "cd frontend && vercel --prod",
    "deploy:railway": "cd api && railway deploy",
    "deploy": "npm run build && npm run deploy:vercel && npm run deploy:railway",
    "test": "cd frontend && npm run test",
    "format": "prettier --write frontend/src/ api/",
    "build:docker": "docker build -t trustlens-backend:latest -f Dockerfile.backend . && docker build -t trustlens-frontend:latest -f Dockerfile.frontend .",
    "push:staging": "docker tag trustlens-backend:latest $DOCKER_REGISTRY/trustlens-backend:staging && docker tag trustlens-frontend:latest $DOCKER_REGISTRY/trustlens-frontend:staging && docker push $DOCKER_REGISTRY/trustlens-backend:staging && docker push $DOCKER_REGISTRY/trustlens-frontend:staging",
    "deploy:staging": "kubectl apply -f k8s/staging/",
    "deploy:prod": "kubectl apply -f k8s/production/",
    "logs:backend": "kubectl logs -f deployment/trustlens-backend",
    "logs:worker": "kubectl logs -f deployment/trustlens-worker"
  },
  "keywords": [
    "authenticity",
    "verification",
    "ai",
    "e-commerce",
    "shopify",
    "deepfake-detection",
    "content-provenance"
  ],
  "author": "TrustLens Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/s3-request-presigner": "^3.400.0",
    "@bull-board/api": "^5.8.0",
    "@bull-board/express": "^5.8.0",
    "@bull-board/ui": "^5.8.0",
    "@prisma/client": "^5.2.0",
    "@sentry/node": "^7.64.0",
    "@shopify/shopify-api": "^7.5.0",
    "argon2": "^0.31.0",
    "axios": "^1.5.0",
    "bullmq": "^4.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pdf-lib": "^1.17.1",
