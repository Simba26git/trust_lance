# TrustLens Frontend Configuration
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=TrustLens
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered content verification platform

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_DEMO_MODE=true

# Social Media & Contact
VITE_CONTACT_EMAIL=support@trustlens.com
VITE_TWITTER_HANDLE=@trustlens
VITE_GITHUB_URL=https://github.com/your-org/trustlens

# Legal Pages
VITE_PRIVACY_POLICY_URL=/privacy
VITE_TERMS_OF_SERVICE_URL=/terms
VITE_COOKIE_POLICY_URL=/cookies

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_BRAND_COLOR=#1e40af

# Development
VITE_DEBUG_MODE=false
