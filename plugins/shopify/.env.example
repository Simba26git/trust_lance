# TrustLens Shopify Plugin Configuration
# Copy this file to .env and fill in your values

# Shopify App Configuration - GET THESE FROM SHOPIFY PARTNER DASHBOARD
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders
SHOPIFY_APP_URL=http://localhost:3002

# TrustLens Integration
TRUSTLENS_API_URL=http://localhost:3001
TRUSTLENS_API_KEY=tl_live_key_1234567890abcdef

# Server Configuration
PORT=3002
NODE_ENV=development

# Session Configuration - CHANGE IN PRODUCTION
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_STORAGE=memory

# Database Configuration (Optional - for storing app data)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/trustlens

# Redis Configuration (Optional - for session storage)
# REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Trust Badge Configuration
DEFAULT_BADGE_STYLE=minimal
DEFAULT_TRUST_THRESHOLD=80
AUTO_ADD_BADGES=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/shopify.log

# Development
DEBUG_MODE=true
ENABLE_NGROK=false
