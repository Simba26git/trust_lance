# TrustLens BigCommerce Plugin Configuration
# Copy this file to .env and fill in your values

# BigCommerce App Configuration - GET THESE FROM BIGCOMMERCE DEV CENTER
BC_CLIENT_ID=your_bigcommerce_client_id_here
BC_CLIENT_SECRET=your_bigcommerce_client_secret_here
BC_APP_URL=http://localhost:3003

# TrustLens Integration
TRUSTLENS_API_URL=http://localhost:3001
TRUSTLENS_API_KEY=tl_live_key_1234567890abcdef

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration (Optional - for storing app data)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/trustlens

# Redis Configuration (Optional - for session storage)
# REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Trust Badge Configuration
DEFAULT_BADGE_STYLE=minimal
DEFAULT_TRUST_THRESHOLD=80
AUTO_ADD_BADGES=true

# App Configuration
APP_NAME=TrustLens Content Verification
APP_SUMMARY=AI-powered content verification for your BigCommerce store
APP_DESCRIPTION=Automatically verify product images and content for authenticity, detecting deepfakes and AI-generated content to build customer trust.

# OAuth Configuration
OAUTH_SCOPES=store_v2_products,store_v2_products_read_write

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bigcommerce.log

# Development
DEBUG_MODE=true
ENABLE_NGROK=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=*
TRUST_PROXY=false
