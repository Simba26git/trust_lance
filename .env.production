# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
NODE_ENV=production
APP_NAME=TrustLens
APP_VERSION=1.0.0

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration (MongoDB Atlas Recommended)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/trustlens?retryWrites=true&w=majority
REDIS_URL=redis://username:password@hostname:port

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
API_KEY_PREFIX=tl_live_
BCRYPT_ROUNDS=12

# API Configuration
API_BASE_URL=https://api.trustlens.com
FRONTEND_URL=https://trustlens.com
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600000

# File Storage (Cloudinary Recommended)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
MAX_FILE_SIZE=10485760

# Email Configuration (SendGrid/Mailgun)
EMAIL_FROM=noreply@trustlens.com
EMAIL_FROM_NAME=TrustLens
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
HEURIST_API_KEY=your-heurist-api-key
AI_MODEL_ENDPOINT=https://api.openai.com/v1

# E-commerce Platform APIs
SHOPIFY_APP_KEY=your-shopify-app-key
SHOPIFY_APP_SECRET=your-shopify-app-secret
SHOPIFY_SCOPES=read_products,write_products,read_orders

BIGCOMMERCE_CLIENT_ID=your-bigcommerce-client-id
BIGCOMMERCE_CLIENT_SECRET=your-bigcommerce-client-secret
BIGCOMMERCE_CALLBACK_URL=https://api.trustlens.com/auth/bigcommerce/callback

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOGROCKET_APP_ID=your-logrocket-app-id

# External Services
WEBHOOK_SECRET=your-webhook-verification-secret
CORS_ORIGINS=https://trustlens.com,https://www.trustlens.com,https://app.trustlens.com

# Security Headers
HELMET_CSP_SOURCES=https://trustlens.com,https://api.trustlens.com
HELMET_HSTS_MAX_AGE=31536000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true

# Backup & Recovery
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Vercel (Frontend)
VITE_API_BASE_URL=https://api.trustlens.com
VITE_APP_ENV=production
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Railway/Render (Backend)
RAILWAY_STATIC_URL=https://api.trustlens.com
PORT=$PORT

# Custom Domain
DOMAIN=trustlens.com
SSL_CERT_PATH=/etc/ssl/certs/trustlens.crt
SSL_KEY_PATH=/etc/ssl/private/trustlens.key
